<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
		<langChildren>0</langChildren>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Rss Manager: Plugin mode</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.rssSettings>
						<TCEforms>
							<onChange>reload</onChange>
							<label>Layout</label>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">Aviation News (manager)</numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">Single feed</numIndex>
										<numIndex index="1">1</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">Widget for Single feed</numIndex>
										<numIndex index="1">2</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">Column mode</numIndex>
										<numIndex index="1">3</numIndex>
									</numIndex>
								</items>
								<minitems>0</minitems>
								<maxitems>1</maxitems>
								<size>1</size>
							</config>
						</TCEforms>
					</settings.rssSettings>
					<settings.singlemode>
						<TCEforms>
							<label>RSS feed URL:</label>
							<displayCond>FIELD:settings.rssSettings:=:1</displayCond>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</settings.singlemode>
					<settings.widgetmode>
						<TCEforms>
							<label>RSS feed URL:</label>
							<displayCond>FIELD:settings.rssSettings:=:2</displayCond>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</settings.widgetmode>
					<settings.widgetoption>
						<TCEforms>
							<label>Page to Single feed:</label>
							<displayCond>FIELD:settings.rssSettings:=:2</displayCond>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
							</config>
						</TCEforms>
					</settings.widgetoption>
					<settings.icon1>
						<TCEforms>
							<label>Path to icon:</label>
							<displayCond>FIELD:settings.rssSettings:=:2</displayCond>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</settings.icon1>
					<settings.columnoption>
						<TCEforms>
							<label>Page to more news:</label>
							<displayCond>FIELD:settings.rssSettings:=:3</displayCond>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
							</config>
						</TCEforms>
					</settings.columnoption>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>